generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  content     String
  author      String
  image       String?
  like        Int       @default(0)
  dilike      Int       @default(0)
  authorImg   String?
  comments    Comment[]
  createdAt   DateTime  @default(now())
  tags        String
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  author    String
  authorImg String 
  createdAt DateTime  @default(now())
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int
  likeCount Int       @default(0)
}
